<h2><%= @title %></h2>

<%= f = form_for @changeset, "#",
  id: "team-form",
  phx_target: @myself,
  phx_change: "validate",
  phx_submit: "save" %>

  <%= label f, dgettext("team", "Name") %>
  <%= text_input f, :name %>
  <%= error_tag f, :name %>

  <%= label f, dgettext("team", "Telegram chat ID") %>
  <%= text_input f, :tg_chat_id %>
  <%= error_tag f, :tg_chat_id %>

  <%= submit dgettext("form", "Save"), phx_disable_with: dgettext("form", "Saving...") %>
</form>
